          flex-direction: column;
          gap: var(--space-sm);
          padding: var(--space-sm) 0;
        }

        .version-buttons {
          flex-direction: column;
          gap: var(--space-xs);
        }

        .version-button {
          padding: var(--space-sm);
        }
      }

      @media (max-width: 480px) {
        .category-filter {
          font-size: var(--text-xs);
          padding: var(--space-xs);
        }

        .recipe-title {
          font-size: var(--text-lg);
        }
      }
    </style>

    <script>
      const filters = document.querySelectorAll(".category-filter");
      const recipes = document.querySelectorAll(".recipe-card");
      const draftToggle = document.getElementById("draft-toggle");
      const draftToggleText = document.querySelector(".draft-toggle-text");

      let showDrafts = false;

      // Check URL params on load
      const urlParams = new URLSearchParams(window.location.search);
      if (urlParams.get('showDrafts') === 'true') {
        showDrafts = true;
        draftToggle.classList.add('active');
        draftToggleText.textContent = '‚úì Brouillons affich√©s';
      }

      // Hide draft recipes initially if not showing drafts
      function updateRecipeVisibility() {
        const activeCategory = document.querySelector(".category-filter.active")?.dataset.category || "all";

        recipes.forEach((recipe) => {
          const isDraft = recipe.dataset.draft === "true";
          const recipeCategories = recipe.dataset.categories?.split(",") || [];

          let shouldShow = true;

          // Check draft status
          if (!showDrafts && isDraft) {
            shouldShow = false;
          }

          // Check category filter
          if (shouldShow && activeCategory !== "all" && !recipeCategories.includes(activeCategory)) {
            shouldShow = false;
          }

          recipe.style.display = shouldShow ? "block" : "none";
        });
      }

      // Initial visibility update
      updateRecipeVisibility();

      // Draft toggle handler
      draftToggle.addEventListener("click", () => {
        showDrafts = !showDrafts;

        if (showDrafts) {
          draftToggle.classList.add('active');
          draftToggleText.textContent = '‚úì Brouillons affich√©s';
          // Update URL without reload
          const newUrl = new URL(window.location);
          newUrl.searchParams.set('showDrafts', 'true');
          window.history.pushState({}, '', newUrl);
        } else {
          draftToggle.classList.remove('active');
          draftToggleText.textContent = '‚óØ Afficher brouillons';
          // Update URL without reload
          const newUrl = new URL(window.location);
          newUrl.searchParams.delete('showDrafts');
          window.history.pushState({}, '', newUrl);
        }

        updateRecipeVisibility();
      });

      // Category filter handlers
      filters.forEach((filter) => {
        filter.addEventListener("click", () => {
          filters.forEach((f) => f.classList.remove("active"));
          filter.classList.add("active");
          updateRecipeVisibility();
        });
      });
    </script>
  </body>
