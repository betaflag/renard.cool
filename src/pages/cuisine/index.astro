import { getCollection } from "astro:content";

// For static site, we need to include all recipes and filter client-side
const allRecipes = (await getCollection("cuisine")).sort(
  (a, b) =>
    new Date(b.data.pubDate).valueOf() - new Date(a.data.pubDate).valueOf()
);

// Group recipes by base name (without variant suffix)
// Only show Simple versions as base recipes, with their Advanced counterparts
const baseRecipes = allRecipes.filter(recipe =>
  (recipe.data as any).variant === 'simple' || !(recipe.data as any).variant
);

// Create a map to find Advanced versions
const advancedRecipesMap = new Map();
allRecipes.forEach(recipe => {
  if ((recipe.data as any).variant === 'avance' && (recipe.data as any).relatedRecipe) {
    advancedRecipesMap.set((recipe.data as any).relatedRecipe, recipe);
  }
});

// We'll use base recipes and handle filtering client-side
const recipes = baseRecipes;

// Always get all categories from all recipes (including drafts)
// so the category filters work properly when drafts are shown
const categories = [
  ...new Set(allRecipes.flatMap((recipe) => recipe.data.categories)),
].sort();
