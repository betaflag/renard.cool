                const month = value.substring(4, 6);
                const day = value.substring(6, 8);
                const hour = value.substring(9, 11) || 0;
                const minute = value.substring(11, 13) || 0;
                return new Date(year, month - 1, day, hour, minute);
              }
            }
          }

          unescapeText(text) {
