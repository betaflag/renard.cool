    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
        background: linear-gradient(135deg, #0a0a0a 0%, #1a1a2e 50%, #16213e 100%);
        color: #e8e8e8;
        font-family: 'Raleway', sans-serif;
        min-height: 100vh;
        overflow-x: hidden;
        position: relative;
      }

      .smoke-container {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        pointer-events: none;
        z-index: 1;
      }

      .smoke {
        position: absolute;
        width: 200%;
        height: 200%;
        background: radial-gradient(circle at 50% 50%, rgba(255, 107, 0, 0.03), transparent 50%);
        animation: drift 20s infinite;
        opacity: 0.7;
      }

      .smoke-2 {
        animation-delay: -7s;
        animation-duration: 25s;
        background: radial-gradient(circle at 30% 70%, rgba(255, 140, 0, 0.02), transparent 60%);
      }

      .smoke-3 {
        animation-delay: -14s;
        animation-duration: 30s;
        background: radial-gradient(circle at 70% 30%, rgba(255, 69, 0, 0.025), transparent 55%);
      }

      @keyframes drift {
        0%, 100% {
          transform: translate(-10%, -10%) rotate(0deg);
        }
        33% {
          transform: translate(10%, -20%) rotate(120deg);
        }
        66% {
          transform: translate(-20%, 10%) rotate(240deg);
        }
      }

      main {
        position: relative;
        z-index: 2;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        min-height: 100vh;
        padding: 2rem;
      }

      .avatar-container {
        position: relative;
        margin-bottom: 3rem;
        animation: float 6s ease-in-out infinite;
      }

      .avatar {
        width: 200px;
        height: 200px;
        border-radius: 50%;
        border: 3px solid rgba(255, 107, 0, 0.3);
        box-shadow: 
          0 0 60px rgba(255, 107, 0, 0.3),
          0 0 100px rgba(255, 69, 0, 0.1),
          inset 0 0 20px rgba(255, 140, 0, 0.1);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        filter: brightness(0.9) contrast(1.1);
      }

      .avatar:hover {
        transform: scale(1.05);
        box-shadow: 
          0 0 80px rgba(255, 107, 0, 0.5),
          0 0 120px rgba(255, 69, 0, 0.2),
          inset 0 0 30px rgba(255, 140, 0, 0.2);
      }

      .glow {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: 250px;
        height: 250px;
        background: radial-gradient(circle, rgba(255, 107, 0, 0.2), transparent 70%);
        border-radius: 50%;
        animation: pulse 3s ease-in-out infinite;
        pointer-events: none;
      }

      @keyframes float {
        0%, 100% {
          transform: translateY(0);
        }
        50% {
          transform: translateY(-20px);
        }
      }

      @keyframes pulse {
        0%, 100% {
          opacity: 0.5;
          transform: translate(-50%, -50%) scale(1);
        }
        50% {
          opacity: 0.8;
          transform: translate(-50%, -50%) scale(1.1);
        }
      }

      .title {
        font-family: 'Cinzel', serif;
        font-size: clamp(2.5rem, 8vw, 4.5rem);
        font-weight: 600;
        letter-spacing: 0.1em;
        margin-bottom: 1rem;
        text-shadow: 
          0 0 20px rgba(255, 107, 0, 0.5),
          0 0 40px rgba(255, 69, 0, 0.3);
        animation: flicker 3s ease-in-out infinite;
      }

      .cool {
        color: #ff6b00;
        font-weight: 400;
      }

      @keyframes flicker {
        0%, 100% {
          opacity: 1;
        }
        50% {
          opacity: 0.9;
        }
      }

      .tagline {
        font-size: 1.2rem;
        font-weight: 300;
        color: rgba(255, 255, 255, 0.7);
        margin-bottom: 3rem;
        letter-spacing: 0.05em;
        animation: fadeIn 2s ease-out;
      }

      .mystery-text {
        margin-bottom: 3rem;
        text-align: center;
      }

      .cipher {
        font-size: 1rem;
        color: rgba(255, 107, 0, 0.6);
        letter-spacing: 0.3em;
        text-transform: uppercase;
        animation: glitch 5s infinite;
      }

      @keyframes glitch {
        0%, 100% {
          text-shadow: 
            0.05em 0 0 rgba(255, 0, 0, 0.3),
            -0.05em -0.025em 0 rgba(0, 255, 0, 0.3),
            0.025em 0.05em 0 rgba(0, 0, 255, 0.3);
        }
        15% {
          text-shadow: 
            0.05em 0 0 rgba(255, 0, 0, 0.3),
            -0.05em -0.025em 0 rgba(0, 255, 0, 0.3),
            0.025em 0.05em 0 rgba(0, 0, 255, 0.3);
        }
        16% {
          text-shadow: 
            -0.05em -0.025em 0 rgba(255, 0, 0, 0.3),
            0.025em 0.025em 0 rgba(0, 255, 0, 0.3),
            -0.05em -0.05em 0 rgba(0, 0, 255, 0.3);
        }
        49% {
          text-shadow: 
            -0.05em -0.025em 0 rgba(255, 0, 0, 0.3),
            0.025em 0.025em 0 rgba(0, 255, 0, 0.3),
            -0.05em -0.05em 0 rgba(0, 0, 255, 0.3);
        }
        50% {
          text-shadow: 
            0.025em 0.05em 0 rgba(255, 0, 0, 0.3),
            0.05em 0 0 rgba(0, 255, 0, 0.3),
            0 -0.05em 0 rgba(0, 0, 255, 0.3);
        }
        99% {
          text-shadow: 
            0.025em 0.05em 0 rgba(255, 0, 0, 0.3),
            0.05em 0 0 rgba(0, 255, 0, 0.3),
            0 -0.05em 0 rgba(0, 0, 255, 0.3);
        }
      }

      .nav-links {
        display: flex;
        gap: 2rem;
      }

      .nav-link {
        position: relative;
        color: rgba(255, 255, 255, 0.6);
        text-decoration: none;
        font-size: 1.1rem;
        letter-spacing: 0.05em;
        transition: color 0.3s ease;
        padding: 0.5rem 1rem;
      }

      .nav-link::before {
        content: attr(data-text);
        position: absolute;
        top: 0.5rem;
        left: 1rem;
        color: #ff6b00;
        opacity: 0;
        transition: opacity 0.3s ease;
        pointer-events: none;
      }

      .nav-link:hover {
        color: transparent;
      }

      .nav-link:hover::before {
        opacity: 1;
      }

      .nav-link::after {
        content: '';
        position: absolute;
        bottom: 0;
        left: 50%;
        transform: translateX(-50%);
        width: 0;
        height: 1px;
        background: linear-gradient(90deg, transparent, #ff6b00, transparent);
        transition: width 0.3s ease;
      }

      .nav-link:hover::after {
        width: 100%;
      }

      @keyframes fadeIn {
        from {
          opacity: 0;
          transform: translateY(20px);
        }
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }

      @media (max-width: 768px) {
        .avatar {
          width: 150px;
          height: 150px;
        }

        .glow {
          width: 200px;
          height: 200px;
        }

        .nav-links {
          flex-direction: column;
          gap: 1rem;
          text-align: center;
        }
      }
    </style>
  </body>
</html>
