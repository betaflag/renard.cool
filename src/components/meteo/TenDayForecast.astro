---
// 10-day forecast component with compact row layout for mobile
---

<section id="ten-day-forecast" class="ten-day-forecast hidden">
  <h2 class="ten-day-title">PRÃ‰VISIONS SUR 10 JOURS</h2>
  <div class="ten-day-list">
    <!-- Forecast rows will be inserted here by JavaScript -->
  </div>
</section>

<style>
  .ten-day-forecast {
    animation: fadeIn 0.8s ease-out;
    margin-bottom: 64px;
  }

  .ten-day-title {
    font-family: "Cinzel", serif;
    font-size: 1.3rem;
    text-align: center;
    margin-bottom: 20px;
    color: #d1d5db;
    text-shadow: 0 0 10px rgba(255, 107, 0, 0.15);
    font-weight: 600;
    letter-spacing: 0.15em;
    text-transform: uppercase;
  }

  .ten-day-list {
    background: linear-gradient(
      135deg,
      rgba(26, 26, 46, 0.5) 0%,
      rgba(36, 36, 56, 0.5) 100%
    );
    border: 1px solid rgba(255, 107, 0, 0.2);
    border-radius: 16px;
    backdrop-filter: blur(10px);
    overflow: hidden;
    max-width: 1400px;
    margin: 0 auto;
  }

  /* Dynamic elements created by JavaScript - MUST use :global() */

  :global(.ten-day-row) {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 12px 16px;
    border-bottom: 1px solid rgba(255, 107, 0, 0.1);
    transition: all 0.3s ease;
    animation: fadeInUp 0.4s ease-out backwards;
  }

  :global(.ten-day-row:last-child) {
    border-bottom: none;
  }

  :global(.ten-day-row:hover) {
    background: rgba(255, 107, 0, 0.08);
    border-bottom-color: rgba(255, 107, 0, 0.2);
  }

  /* Staggered animation delays */
  :global(.ten-day-row:nth-child(1)) { animation-delay: 0.05s; }
  :global(.ten-day-row:nth-child(2)) { animation-delay: 0.1s; }
  :global(.ten-day-row:nth-child(3)) { animation-delay: 0.15s; }
  :global(.ten-day-row:nth-child(4)) { animation-delay: 0.2s; }
  :global(.ten-day-row:nth-child(5)) { animation-delay: 0.25s; }
  :global(.ten-day-row:nth-child(6)) { animation-delay: 0.3s; }
  :global(.ten-day-row:nth-child(7)) { animation-delay: 0.35s; }
  :global(.ten-day-row:nth-child(8)) { animation-delay: 0.4s; }
  :global(.ten-day-row:nth-child(9)) { animation-delay: 0.45s; }
  :global(.ten-day-row:nth-child(10)) { animation-delay: 0.5s; }

  /* Left section: Day name and date */
  :global(.ten-day-left) {
    display: flex;
    flex-direction: column;
    gap: 2px;
    min-width: 80px;
  }

  :global(.ten-day-day-name) {
    font-size: 0.95rem;
    font-weight: 600;
    color: #ff6b00;
    text-shadow: 0 0 8px rgba(255, 107, 0, 0.2);
  }

  :global(.ten-day-date) {
    font-size: 0.75rem;
    color: #a8a8a8;
    font-weight: 400;
  }

  /* Middle section: Icon and weather description */
  :global(.ten-day-middle) {
    display: flex;
    align-items: center;
    gap: 10px;
    flex: 1;
    min-width: 0;
    padding: 0 12px;
  }

  :global(.ten-day-icon) {
    width: 32px;
    height: 32px;
    stroke: #ff6b00;
    opacity: 0.9;
    flex-shrink: 0;
    filter: drop-shadow(0 0 6px rgba(255, 107, 0, 0.3));
  }

  :global(.ten-day-description) {
    font-size: 0.85rem;
    color: #d1d5db;
    font-weight: 400;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  /* Right section: Temps and precipitation */
  :global(.ten-day-right) {
    display: flex;
    align-items: center;
    gap: 12px;
    flex-shrink: 0;
  }

  :global(.ten-day-temps) {
    display: flex;
    align-items: baseline;
    gap: 4px;
  }

  :global(.ten-day-temp-high) {
    font-size: 1.1rem;
    font-weight: 700;
    color: #ff6b00;
    text-shadow: 0 0 8px rgba(255, 107, 0, 0.3);
  }

  :global(.ten-day-temp-separator) {
    font-size: 0.9rem;
    color: rgba(255, 107, 0, 0.4);
    font-weight: 300;
  }

  :global(.ten-day-temp-low) {
    font-size: 0.9rem;
    color: #a8a8a8;
    font-weight: 500;
  }

  :global(.ten-day-precip) {
    display: flex;
    align-items: center;
    gap: 4px;
    font-size: 0.8rem;
    color: #60a5fa;
    min-width: 50px;
  }

  :global(.ten-day-precip-icon) {
    width: 14px;
    height: 14px;
    stroke: #60a5fa;
    flex-shrink: 0;
  }

  /* Responsive design */
  @media (max-width: 768px) {
    .ten-day-title {
      font-size: 1.2rem;
      margin-bottom: 16px;
    }

    :global(.ten-day-row) {
      padding: 10px 12px;
    }

    :global(.ten-day-left) {
      min-width: 70px;
    }

    :global(.ten-day-day-name) {
      font-size: 0.85rem;
    }

    :global(.ten-day-date) {
      font-size: 0.7rem;
    }

    :global(.ten-day-middle) {
      padding: 0 8px;
      gap: 8px;
    }

    :global(.ten-day-icon) {
      width: 28px;
      height: 28px;
    }

    :global(.ten-day-description) {
      font-size: 0.8rem;
    }

    :global(.ten-day-right) {
      gap: 8px;
    }

    :global(.ten-day-temp-high) {
      font-size: 1rem;
    }

    :global(.ten-day-temp-low) {
      font-size: 0.85rem;
    }

    :global(.ten-day-precip) {
      font-size: 0.75rem;
      min-width: 45px;
    }
  }

  @media (max-width: 480px) {
    :global(.ten-day-row) {
      padding: 8px 10px;
    }

    :global(.ten-day-left) {
      min-width: 60px;
    }

    :global(.ten-day-day-name) {
      font-size: 0.8rem;
    }

    :global(.ten-day-middle) {
      padding: 0 6px;
      gap: 6px;
    }

    :global(.ten-day-icon) {
      width: 24px;
      height: 24px;
    }

    :global(.ten-day-description) {
      font-size: 0.75rem;
    }

    :global(.ten-day-temp-high) {
      font-size: 0.95rem;
    }

    :global(.ten-day-temp-separator) {
      font-size: 0.8rem;
    }

    :global(.ten-day-temp-low) {
      font-size: 0.8rem;
    }

    :global(.ten-day-precip) {
      font-size: 0.7rem;
      min-width: 40px;
    }
  }
</style>
