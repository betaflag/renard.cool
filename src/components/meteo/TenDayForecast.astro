---
// 10-day forecast component with temperature range visualization
---

<section id="ten-day-forecast" class="ten-day-forecast hidden">
  <h2 class="ten-day-title">PRÃ‰VISIONS SUR 10 JOURS</h2>
  <div class="ten-day-list">
    <!-- Forecast rows will be inserted here by JavaScript -->
  </div>
</section>

<style>
  .ten-day-forecast {
    animation: fadeIn 0.8s ease-out;
    margin-bottom: 64px;
  }

  .ten-day-title {
    font-family: "Cinzel", serif;
    font-size: 1.3rem;
    text-align: center;
    margin-bottom: 20px;
    color: #d1d5db;
    text-shadow: 0 0 10px rgba(255, 107, 0, 0.15);
    font-weight: 600;
    letter-spacing: 0.15em;
    text-transform: uppercase;
  }

  .ten-day-list {
    background: linear-gradient(
      135deg,
      rgba(26, 26, 46, 0.4) 0%,
      rgba(36, 36, 56, 0.4) 100%
    );
    border: 1px solid rgba(255, 107, 0, 0.15);
    border-radius: 20px;
    backdrop-filter: blur(10px);
    overflow: hidden;
    max-width: 1400px;
    margin: 0 auto;
  }

  /* Dynamic elements created by JavaScript - MUST use :global() */

  :global(.ten-day-row) {
    display: grid;
    grid-template-columns: 70px 40px 40px 1fr 50px 60px;
    align-items: center;
    gap: 12px;
    padding: 16px 20px;
    border-bottom: 1px solid rgba(255, 107, 0, 0.08);
    transition: all 0.3s ease;
    animation: fadeInUp 0.4s ease-out backwards;
  }

  :global(.ten-day-row:last-child) {
    border-bottom: none;
  }

  :global(.ten-day-row:hover) {
    background: rgba(255, 107, 0, 0.05);
  }

  /* Staggered animation delays */
  :global(.ten-day-row:nth-child(1)) { animation-delay: 0.05s; }
  :global(.ten-day-row:nth-child(2)) { animation-delay: 0.1s; }
  :global(.ten-day-row:nth-child(3)) { animation-delay: 0.15s; }
  :global(.ten-day-row:nth-child(4)) { animation-delay: 0.2s; }
  :global(.ten-day-row:nth-child(5)) { animation-delay: 0.25s; }
  :global(.ten-day-row:nth-child(6)) { animation-delay: 0.3s; }
  :global(.ten-day-row:nth-child(7)) { animation-delay: 0.35s; }
  :global(.ten-day-row:nth-child(8)) { animation-delay: 0.4s; }
  :global(.ten-day-row:nth-child(9)) { animation-delay: 0.45s; }
  :global(.ten-day-row:nth-child(10)) { animation-delay: 0.5s; }

  /* Day name */
  :global(.ten-day-day-name) {
    font-size: 1rem;
    font-weight: 500;
    color: #e5e7eb;
    white-space: nowrap;
  }

  /* Weather icon */
  :global(.ten-day-icon) {
    width: 36px;
    height: 36px;
    stroke: #ff6b00;
    opacity: 0.85;
    flex-shrink: 0;
    filter: drop-shadow(0 0 6px rgba(255, 107, 0, 0.2));
  }

  /* Low temperature */
  :global(.ten-day-temp-low) {
    font-size: 1.1rem;
    color: #9ca3af;
    font-weight: 500;
    text-align: right;
  }

  /* Temperature range bar container */
  :global(.ten-day-temp-bar-container) {
    position: relative;
    height: 6px;
    background: rgba(100, 116, 139, 0.3);
    border-radius: 3px;
    overflow: hidden;
  }

  /* Temperature range bar fill */
  :global(.ten-day-temp-bar) {
    position: absolute;
    height: 100%;
    background: linear-gradient(
      90deg,
      rgba(255, 107, 0, 0.4) 0%,
      rgba(255, 107, 0, 0.6) 50%,
      rgba(255, 107, 0, 0.8) 100%
    );
    border-radius: 3px;
    transition: all 0.5s ease-out;
    box-shadow: 0 0 8px rgba(255, 107, 0, 0.3);
  }

  /* High temperature */
  :global(.ten-day-temp-high) {
    font-size: 1.1rem;
    font-weight: 600;
    color: #ff6b00;
    text-shadow: 0 0 8px rgba(255, 107, 0, 0.3);
    text-align: left;
  }

  /* Precipitation percentage */
  :global(.ten-day-precip) {
    font-size: 0.9rem;
    color: #60a5fa;
    font-weight: 500;
    text-align: right;
    display: flex;
    align-items: center;
    gap: 4px;
    justify-content: flex-end;
  }

  :global(.ten-day-precip-icon) {
    width: 16px;
    height: 16px;
    stroke: #60a5fa;
    flex-shrink: 0;
  }

  /* Responsive design */
  @media (max-width: 768px) {
    .ten-day-title {
      font-size: 1.2rem;
      margin-bottom: 16px;
    }

    :global(.ten-day-row) {
      grid-template-columns: 60px 32px 35px 1fr 40px 55px;
      gap: 10px;
      padding: 14px 16px;
    }

    :global(.ten-day-day-name) {
      font-size: 0.9rem;
    }

    :global(.ten-day-icon) {
      width: 32px;
      height: 32px;
    }

    :global(.ten-day-temp-low),
    :global(.ten-day-temp-high) {
      font-size: 1rem;
    }

    :global(.ten-day-precip) {
      font-size: 0.85rem;
    }
  }

  @media (max-width: 480px) {
    :global(.ten-day-row) {
      grid-template-columns: 55px 28px 32px 1fr 35px 50px;
      gap: 8px;
      padding: 12px 14px;
    }

    :global(.ten-day-day-name) {
      font-size: 0.85rem;
    }

    :global(.ten-day-icon) {
      width: 28px;
      height: 28px;
    }

    :global(.ten-day-temp-low),
    :global(.ten-day-temp-high) {
      font-size: 0.95rem;
    }

    :global(.ten-day-temp-bar-container) {
      height: 5px;
    }

    :global(.ten-day-precip) {
      font-size: 0.8rem;
    }

    :global(.ten-day-precip-icon) {
      width: 14px;
      height: 14px;
    }
  }
</style>
