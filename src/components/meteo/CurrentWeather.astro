---
// Current weather display component with enriched data
---

<section id="current-weather" class="current-weather hidden">
  <div class="current-card">
    <!-- SECTION 1: Sun Times Bar -->
    <div class="sun-times-bar">
      <div class="sun-item">
        <i data-lucide="sunrise" class="sun-icon"></i>
        <span class="sun-label">LEVER</span>
        <span class="sun-time sunrise">--:--</span>
      </div>
      <div class="sun-item">
        <i data-lucide="sunset" class="sun-icon"></i>
        <span class="sun-label">COUCHER</span>
        <span class="sun-time sunset">--:--</span>
      </div>
    </div>

    <!-- SECTION 2: Main Weather Display -->
    <div class="main-weather-section">
      <div class="weather-info-column">
        <div class="current-temp">
          <span class="temp-value">--</span>
          <span class="temp-unit">°C</span>
        </div>
        <div class="temp-feels-like">
          <span class="feels-like-label">Ressenti</span>
          <span class="feels-like-value">--°C</span>
        </div>
        <div class="temp-minmax">
          <span class="temp-max">Max: --°</span>
          <span class="temp-separator">•</span>
          <span class="temp-min">Min: --°</span>
        </div>
        <p class="weather-text">--</p>
      </div>
      <div class="weather-icon-column">
        <i data-lucide="cloud-sun" class="weather-icon-main"></i>
      </div>
    </div>

    <!-- Conditional badges -->
    <div class="current-badges">
      <!-- Badges will be inserted here by JavaScript -->
    </div>

    <!-- SECTION 3: Detail Cards Grid -->
    <div class="current-details-grid">
      <div class="detail-box">
        <div class="detail-header">
          <i data-lucide="wind" class="detail-icon"></i>
          <span class="detail-label">Vent</span>
        </div>
        <div class="detail-content">
          <span class="detail-value wind-speed">-- km/h</span>
          <span class="detail-extra wind-direction">--</span>
        </div>
      </div>

      <div class="detail-box">
        <div class="detail-header">
          <i data-lucide="droplets" class="detail-icon"></i>
          <span class="detail-label">Humidité</span>
        </div>
        <div class="detail-content">
          <span class="detail-value humidity">--%</span>
          <div class="progress-bar">
            <div class="progress-fill humidity-fill"></div>
          </div>
        </div>
      </div>

      <div class="detail-box">
        <div class="detail-header">
          <i data-lucide="cloud-rain" class="detail-icon"></i>
          <span class="detail-label">Précipitations</span>
        </div>
        <div class="detail-content">
          <span class="detail-value precipitation">-- mm</span>
        </div>
      </div>
    </div>

    <!-- Update timestamp -->
    <div class="last-update">
      <i data-lucide="clock" class="update-icon"></i>
      <span class="update-text">Dernière mise à jour: <span class="update-time">il y a quelques instants</span></span>
    </div>
  </div>
</section>

<style>
  .current-weather {
    margin-bottom: 64px;
    animation: fadeIn 0.7s ease-out;
  }

  .current-card {
    max-width: 1400px;
    margin: 0 auto;
    background: linear-gradient(
      135deg,
      rgba(26, 26, 46, 0.7) 0%,
      rgba(36, 36, 56, 0.6) 50%,
      rgba(46, 46, 66, 0.5) 100%
    );
    border: 1px solid rgba(255, 107, 0, 0.35);
    border-radius: 24px;
    backdrop-filter: blur(20px);
    box-shadow:
      0 20px 50px rgba(0, 0, 0, 0.5),
      0 0 40px rgba(255, 107, 0, 0.15),
      inset 0 0 0 1px rgba(255, 255, 255, 0.1);
    position: relative;
    overflow: hidden;
  }

  .current-card::before {
    content: "";
    position: absolute;
    top: -50%;
    right: -50%;
    width: 200%;
    height: 200%;
    background: radial-gradient(
      circle,
      rgba(255, 107, 0, 0.12) 0%,
      rgba(255, 107, 0, 0.04) 40%,
      transparent 70%
    );
    pointer-events: none;
    animation: float 8s ease-in-out infinite;
    filter: blur(40px);
  }

  @keyframes float {
    0%, 100% { transform: translate(0, 0) rotate(0deg); }
    33% { transform: translate(30px, -30px) rotate(120deg); }
    66% { transform: translate(-20px, 20px) rotate(240deg); }
  }

  .current-card > * {
    position: relative;
    z-index: 1;
  }

  /* ═══════════════════════════════════════════════════════════
     SECTION 1: Sun Times Bar
     ═══════════════════════════════════════════════════════════ */
  .sun-times-bar {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 16px 32px;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  }

  .sun-item {
    display: flex;
    align-items: center;
    gap: 12px;
  }

  .sun-icon {
    width: 20px;
    height: 20px;
    stroke: rgba(255, 107, 0, 0.7);
    filter: drop-shadow(0 0 6px rgba(255, 107, 0, 0.2));
  }

  .sun-label {
    font-size: 0.75rem;
    color: #d1d5db;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    font-weight: 500;
  }

  .sun-time {
    font-size: 1.25rem;
    font-weight: 700;
    color: #e5e7eb;
  }

  /* ═══════════════════════════════════════════════════════════
     SECTION 2: Main Weather Display
     ═══════════════════════════════════════════════════════════ */
  .main-weather-section {
    display: grid;
    grid-template-columns: 380px 280px;
    gap: 80px;
    justify-content: center;
    padding: 48px 32px;
  }

  /* Left Column: Weather Info */
  .weather-info-column {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    justify-content: center;
  }

  .current-temp {
    display: flex;
    align-items: baseline;
    line-height: 1;
  }

  .temp-value {
    font-size: 92px;
    font-weight: 700;
    color: #ff6b00;
    text-shadow: 0 0 30px rgba(255, 107, 0, 0.6);
    line-height: 1;
  }

  .temp-unit {
    font-size: 46px;
    color: #c8c8c8;
    margin-left: 8px;
    font-weight: 400;
  }

  .temp-feels-like {
    display: flex;
    align-items: baseline;
    gap: 6px;
    font-size: 16px;
    margin-top: 10px;
  }

  .feels-like-label {
    color: rgba(255, 255, 255, 0.7);
    font-weight: 400;
  }

  .feels-like-value {
    color: #fbbf24;
    font-weight: 600;
  }

  .temp-minmax {
    display: flex;
    align-items: center;
    gap: 8px;
    font-size: 15px;
    margin-top: 16px;
  }

  .temp-max {
    color: #ff6b00;
    font-weight: 600;
  }

  .temp-separator {
    color: #a8a8a8;
    font-weight: 300;
  }

  .temp-min {
    color: #60a5fa;
    font-weight: 600;
  }

  .weather-text {
    font-size: 28px;
    font-weight: 300;
    letter-spacing: 0.05em;
    color: #e5e7eb;
    margin: 0;
    margin-top: 18px;
  }

  /* Right Column: Weather Icon */
  .weather-icon-column {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .weather-icon-main {
    width: 260px;
    height: 260px;
    margin-top: 16px;
    stroke: #ff6b00;
    filter:
      drop-shadow(0 0 25px rgba(255, 107, 0, 0.5))
      drop-shadow(0 0 50px rgba(255, 107, 0, 0.2))
      blur(0.5px);
    animation: iconPulse 3s ease-in-out infinite;
  }

  @keyframes iconPulse {
    0%, 100% {
      transform: scale(1);
      filter:
        drop-shadow(0 0 25px rgba(255, 107, 0, 0.5))
        drop-shadow(0 0 50px rgba(255, 107, 0, 0.2))
        blur(0.5px);
    }
    50% {
      transform: scale(1.05);
      filter:
        drop-shadow(0 0 30px rgba(255, 107, 0, 0.6))
        drop-shadow(0 0 60px rgba(255, 107, 0, 0.3))
        blur(0.8px);
    }
  }

  /* Conditional Badges */
  .current-badges {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 8px;
    padding: 0 32px 24px 32px;
    min-height: 28px;
  }

  :global(.current-weather .weather-badge) {
    display: inline-flex;
    align-items: center;
    gap: 5px;
    padding: 5px 12px;
    border-radius: 14px;
    font-size: 0.8rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    border-left: 3px solid;
    animation: slideInLeft 0.5s ease-out backwards;
  }

  :global(.current-weather .badge-icon) {
    width: 14px;
    height: 14px;
    stroke-width: 2.5;
  }

  :global(.current-weather .badge-rain) {
    background: rgba(59, 130, 246, 0.15);
    color: #60a5fa;
    border-left-color: #3b82f6;
  }

  :global(.current-weather .badge-wind) {
    background: rgba(251, 191, 36, 0.15);
    color: #fbbf24;
    border-left-color: #f59e0b;
  }

  :global(.current-weather .badge-humid) {
    background: rgba(96, 165, 250, 0.15);
    color: #60a5fa;
    border-left-color: #3b82f6;
  }

  /* ═══════════════════════════════════════════════════════════
     SECTION 3: Detail Cards Grid
     ═══════════════════════════════════════════════════════════ */
  .current-details-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 20px;
    max-width: 1100px;
    margin: 0 auto;
    padding: 24px 32px 28px 32px;
  }

  /* Last Update Section */
  .last-update {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
    padding: 16px 32px 24px 32px;
    border-top: 1px solid rgba(255, 255, 255, 0.05);
    margin-top: 8px;
  }

  .update-icon {
    width: 14px;
    height: 14px;
    stroke: rgba(168, 168, 168, 0.8);
  }

  .update-text {
    font-size: 0.85rem;
    color: rgba(168, 168, 168, 0.9);
    font-weight: 400;
  }

  .update-time {
    color: rgba(209, 213, 219, 1);
    font-weight: 500;
  }

  .detail-box {
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 16px;
    padding: 26px;
    min-height: 120px;
    transition: all 0.3s ease;
  }

  .detail-box:hover {
    background: rgba(255, 255, 255, 0.08);
    border-color: rgba(255, 107, 0, 0.25);
    transform: translateY(-2px);
  }

  .detail-header {
    display: flex;
    align-items: center;
    gap: 7px;
    margin-bottom: 10px;
  }

  .detail-icon {
    width: 20px;
    height: 20px;
    stroke: rgba(209, 213, 219, 0.7);
    flex-shrink: 0;
  }

  .detail-label {
    font-size: 12px;
    color: #d1d5db;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    font-weight: 500;
  }

  .detail-content {
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  .detail-value {
    font-size: 28px;
    font-weight: 600;
    color: #ff6b00;
    text-shadow: 0 0 10px rgba(255, 107, 0, 0.3);
  }

  .detail-extra {
    font-size: 14px;
    color: #d1d5db;
    font-weight: 400;
  }

  /* Progress bar */
  .progress-bar {
    width: 100%;
    height: 8px;
    background: rgba(0, 0, 0, 0.3);
    border-radius: 10px;
    overflow: hidden;
  }

  .progress-fill {
    height: 100%;
    background: linear-gradient(90deg, #3b82f6, #60a5fa);
    border-radius: 10px;
    transition: width 0.8s cubic-bezier(0.4, 0, 0.2, 1);
  }

  /* ═══════════════════════════════════════════════════════════
     RESPONSIVE BREAKPOINTS
     ═══════════════════════════════════════════════════════════ */

  /* Tablet: 900px and below */
  @media (max-width: 900px) {
    /* Section 1: Sun Times */
    .sun-times-bar {
      padding: 16px 24px;
    }

    /* Section 2: Stack to single column */
    .main-weather-section {
      grid-template-columns: 1fr;
      gap: 32px;
      padding: 48px 24px;
    }

    .weather-info-column {
      align-items: center;
      text-align: center;
    }

    .temp-value {
      font-size: 96px;
    }

    .temp-unit {
      font-size: 48px;
    }

    .temp-feels-like,
    .temp-minmax {
      font-size: 18px;
      justify-content: center;
    }

    .weather-text {
      font-size: 28px;
    }

    .weather-icon-column {
      justify-content: center;
    }

    .weather-icon-main {
      width: 220px;
      height: 220px;
      margin-top: 0;
    }

    /* Section 3: 2 columns */
    .current-details-grid {
      grid-template-columns: repeat(2, 1fr);
      padding: 24px 24px 48px 24px;
    }

    .current-badges {
      padding: 0 24px 16px 24px;
    }
  }

  /* Mobile: 480px and below */
  @media (max-width: 480px) {
    /* Section 1: Sun Times */
    .sun-times-bar {
      padding: 12px 16px;
      flex-direction: column;
      gap: 12px;
    }

    .sun-item {
      justify-content: center;
    }

    /* Section 2: Smaller sizes */
    .main-weather-section {
      padding: 24px 16px;
      gap: 24px;
    }

    .temp-value {
      font-size: 56px;
    }

    .temp-unit {
      font-size: 28px;
    }

    .temp-feels-like,
    .temp-minmax {
      font-size: 14px;
    }

    .weather-text {
      font-size: 20px;
    }

    .weather-icon-main {
      width: 120px;
      height: 120px;
    }

    /* Section 3: Single column */
    .current-details-grid {
      grid-template-columns: 1fr;
      padding: 0 16px 24px 16px;
      gap: 16px;
    }

    .detail-box {
      padding: 16px;
      min-height: 100px;
    }

    .current-badges {
      padding: 0 16px 12px 16px;
    }

    .last-update {
      padding: 12px 16px 16px 16px;
    }

    .update-icon {
      width: 12px;
      height: 12px;
    }

    .update-text {
      font-size: 0.75rem;
    }
  }
</style>
