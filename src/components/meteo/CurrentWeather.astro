---
// Current weather display component with enriched data
---

<section id="current-weather" class="current-weather hidden">
  <div class="current-card">
    <!-- Main header with temp and icon -->
    <div class="current-header">
      <div class="current-temp-section">
        <div class="current-temp">
          <span class="temp-value">--</span>
          <span class="temp-unit">°C</span>
        </div>
        <div class="temp-minmax">
          <span class="temp-max">Max: --°</span>
          <span class="temp-separator">•</span>
          <span class="temp-min">Min: --°</span>
        </div>
        <p class="weather-text">--</p>
      </div>
      <div class="current-icon">
        <i data-lucide="cloud-sun" class="weather-icon-main"></i>
      </div>
    </div>

    <!-- Conditional badges -->
    <div class="current-badges">
      <!-- Badges will be inserted here by JavaScript -->
    </div>

    <!-- Main details grid (3x2) -->
    <div class="current-details-grid">
      <div class="detail-box">
        <div class="detail-header">
          <i data-lucide="wind" class="detail-icon"></i>
          <span class="detail-label">Vent</span>
        </div>
        <div class="detail-content">
          <span class="detail-value wind-speed">-- km/h</span>
          <span class="detail-extra wind-direction">--</span>
        </div>
      </div>

      <div class="detail-box">
        <div class="detail-header">
          <i data-lucide="droplets" class="detail-icon"></i>
          <span class="detail-label">Humidité</span>
        </div>
        <div class="detail-content">
          <span class="detail-value humidity">--%</span>
          <div class="progress-bar">
            <div class="progress-fill humidity-fill"></div>
          </div>
        </div>
      </div>

      <div class="detail-box">
        <div class="detail-header">
          <i data-lucide="thermometer" class="detail-icon"></i>
          <span class="detail-label">Ressenti</span>
        </div>
        <div class="detail-content">
          <span class="detail-value feels-like">--°C</span>
        </div>
      </div>

      <div class="detail-box">
        <div class="detail-header">
          <i data-lucide="gauge" class="detail-icon"></i>
          <span class="detail-label">Pression</span>
        </div>
        <div class="detail-content">
          <span class="detail-value pressure">-- hPa</span>
        </div>
      </div>

      <div class="detail-box">
        <div class="detail-header">
          <i data-lucide="cloud-rain" class="detail-icon"></i>
          <span class="detail-label">Précipitations</span>
        </div>
        <div class="detail-content">
          <span class="detail-value precipitation">-- mm</span>
        </div>
      </div>

      <div class="detail-box">
        <div class="detail-header">
          <i data-lucide="eye" class="detail-icon"></i>
          <span class="detail-label">Visibilité</span>
        </div>
        <div class="detail-content">
          <span class="detail-value visibility">-- km</span>
        </div>
      </div>
    </div>

    <!-- Sun times -->
    <div class="sun-times">
      <div class="sun-item">
        <i data-lucide="sunrise" class="sun-icon"></i>
        <div class="sun-info">
          <span class="sun-label">Lever</span>
          <span class="sun-time sunrise">--:--</span>
        </div>
      </div>
      <div class="sun-item">
        <i data-lucide="sunset" class="sun-icon"></i>
        <div class="sun-info">
          <span class="sun-label">Coucher</span>
          <span class="sun-time sunset">--:--</span>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .current-weather {
    margin-bottom: 50px;
    animation: fadeIn 0.7s ease-out;
  }

  .current-card {
    background: linear-gradient(
      135deg,
      rgba(26, 26, 46, 0.6) 0%,
      rgba(36, 36, 56, 0.5) 100%
    );
    border: 1px solid rgba(255, 107, 0, 0.3);
    border-radius: 24px;
    padding: 35px;
    backdrop-filter: blur(15px);
    box-shadow: 0 15px 40px rgba(0, 0, 0, 0.4);
    position: relative;
    overflow: hidden;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .current-card::before {
    content: "";
    position: absolute;
    top: -50%;
    right: -50%;
    width: 200%;
    height: 200%;
    background: radial-gradient(
      circle,
      rgba(255, 107, 0, 0.08) 0%,
      transparent 70%
    );
    pointer-events: none;
    animation: float 8s ease-in-out infinite;
  }

  @keyframes float {
    0%, 100% { transform: translate(0, 0) rotate(0deg); }
    33% { transform: translate(30px, -30px) rotate(120deg); }
    66% { transform: translate(-20px, 20px) rotate(240deg); }
  }

  .current-card > * {
    position: relative;
    z-index: 1;
  }

  /* Header section */
  .current-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 25px;
    padding-bottom: 20px;
    border-bottom: 1px solid rgba(255, 107, 0, 0.2);
  }

  .current-temp-section {
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  .current-temp {
    display: flex;
    align-items: baseline;
  }

  .temp-value {
    font-size: 5.5rem;
    font-weight: 700;
    color: #ff6b00;
    text-shadow: 0 0 30px rgba(255, 107, 0, 0.6);
    line-height: 1;
  }

  .temp-unit {
    font-size: 2.2rem;
    color: #a8a8a8;
    margin-left: 8px;
    font-weight: 400;
  }

  .temp-minmax {
    display: flex;
    align-items: center;
    gap: 8px;
    margin-top: 8px;
    font-size: 1rem;
  }

  .temp-max {
    color: #ff6b00;
    font-weight: 600;
  }

  .temp-separator {
    color: #a8a8a8;
    font-weight: 300;
  }

  .temp-min {
    color: #60a5fa;
    font-weight: 600;
  }

  .weather-text {
    font-size: 1.3rem;
    font-weight: 300;
    letter-spacing: 0.05em;
    color: #d1d5db;
    margin: 0;
    margin-top: 8px;
  }

  .current-icon {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .weather-icon-main {
    width: 100px;
    height: 100px;
    stroke: #ff6b00;
    filter: drop-shadow(0 0 25px rgba(255, 107, 0, 0.5));
    animation: iconPulse 3s ease-in-out infinite;
  }

  @keyframes iconPulse {
    0%, 100% { transform: scale(1); }
    50% { transform: scale(1.05); }
  }

  /* Badges section */
  .current-badges {
    display: flex;
    flex-wrap: wrap;
    gap: 8px;
    margin-bottom: 20px;
    min-height: 28px;
  }

  :global(.current-weather .weather-badge) {
    display: inline-flex;
    align-items: center;
    gap: 5px;
    padding: 5px 12px;
    border-radius: 14px;
    font-size: 0.8rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    border-left: 3px solid;
    animation: slideInLeft 0.5s ease-out backwards;
  }

  :global(.current-weather .badge-icon) {
    width: 14px;
    height: 14px;
    stroke-width: 2.5;
  }

  :global(.current-weather .badge-rain) {
    background: rgba(59, 130, 246, 0.15);
    color: #60a5fa;
    border-left-color: #3b82f6;
  }

  :global(.current-weather .badge-wind) {
    background: rgba(251, 191, 36, 0.15);
    color: #fbbf24;
    border-left-color: #f59e0b;
  }

  :global(.current-weather .badge-humid) {
    background: rgba(96, 165, 250, 0.15);
    color: #60a5fa;
    border-left-color: #3b82f6;
  }

  /* Details grid 3x2 */
  .current-details-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 15px;
    margin-bottom: 20px;
  }

  .detail-box {
    background: rgba(0, 0, 0, 0.25);
    border: 1px solid rgba(255, 107, 0, 0.1);
    border-radius: 14px;
    padding: 15px;
    transition: all 0.3s ease;
  }

  .detail-box:hover {
    background: rgba(0, 0, 0, 0.35);
    border-color: rgba(255, 107, 0, 0.3);
    transform: translateY(-2px);
  }

  .detail-header {
    display: flex;
    align-items: center;
    gap: 8px;
    margin-bottom: 10px;
  }

  .detail-icon {
    width: 20px;
    height: 20px;
    stroke: rgba(255, 107, 0, 0.8);
    flex-shrink: 0;
  }

  .detail-label {
    font-size: 0.8rem;
    color: #9ca3af;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    font-weight: 500;
  }

  .detail-content {
    display: flex;
    flex-direction: column;
    gap: 6px;
  }

  .detail-value {
    font-size: 1.3rem;
    font-weight: 600;
    color: #ff6b00;
    text-shadow: 0 0 10px rgba(255, 107, 0, 0.3);
  }

  .detail-extra {
    font-size: 0.85rem;
    color: #a8a8a8;
    font-weight: 400;
  }

  /* Progress bar */
  .progress-bar {
    width: 100%;
    height: 6px;
    background: rgba(0, 0, 0, 0.3);
    border-radius: 3px;
    overflow: hidden;
  }

  .progress-fill {
    height: 100%;
    background: linear-gradient(90deg, #3b82f6, #60a5fa);
    border-radius: 3px;
    transition: width 0.8s cubic-bezier(0.4, 0, 0.2, 1);
  }

  /* Sun times */
  .sun-times {
    display: flex;
    justify-content: space-around;
    gap: 30px;
    padding-top: 20px;
    border-top: 1px solid rgba(255, 107, 0, 0.15);
  }

  .sun-item {
    display: flex;
    align-items: center;
    gap: 12px;
  }

  .sun-icon {
    width: 32px;
    height: 32px;
    stroke: #ff6b00;
    filter: drop-shadow(0 0 10px rgba(255, 107, 0, 0.3));
  }

  .sun-info {
    display: flex;
    flex-direction: column;
    gap: 2px;
  }

  .sun-label {
    font-size: 0.8rem;
    color: #9ca3af;
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }

  .sun-time {
    font-size: 1.2rem;
    font-weight: 600;
    color: #ff6b00;
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .current-details-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 768px) {
    .current-card {
      padding: 25px;
    }

    .current-header {
      flex-direction: column;
      gap: 20px;
      text-align: center;
    }

    .current-temp-section {
      align-items: center;
    }

    .temp-value {
      font-size: 4.5rem;
    }

    .weather-icon-main {
      width: 80px;
      height: 80px;
    }

    .current-details-grid {
      grid-template-columns: 1fr;
      gap: 12px;
    }

    .sun-times {
      flex-direction: column;
      align-items: center;
      gap: 15px;
    }
  }

  @media (max-width: 480px) {
    .current-card {
      padding: 20px;
    }

    .temp-value {
      font-size: 3.5rem;
    }

    .temp-unit {
      font-size: 1.8rem;
    }

    .weather-icon-main {
      width: 70px;
      height: 70px;
    }

    .detail-box {
      padding: 12px;
    }

    .detail-value {
      font-size: 1.1rem;
    }
  }
</style>
