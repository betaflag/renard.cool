---
// Today's morning/afternoon forecast component with enriched UI
---

<section id="today-forecast" class="today-forecast hidden">
  <h2 class="today-title">AUJOURD'HUI</h2>
  <div class="today-grid">
    <!-- Morning Card -->
    <div class="period-card morning-card" data-period="morning">
      <div class="period-header">
        <div class="period-title-group">
          <i data-lucide="sun-medium" class="period-icon"></i>
          <span class="period-name">Matin</span>
        </div>
        <div class="period-time-group">
          <span class="period-time">8h - 12h</span>
          <span class="period-status morning-status"></span>
        </div>
      </div>

      <div class="period-main">
        <div class="period-temp-section">
          <div class="period-temp">
            <span class="period-temp-value">--</span>
            <span class="period-temp-unit">°C</span>
          </div>
          <div class="period-feels-like">
            <span class="feels-like-label">Ressenti</span>
            <span class="morning-feels-like">--°C</span>
          </div>
          <div class="period-weather">
            <i data-lucide="cloud" class="period-weather-icon"></i>
            <span class="period-weather-text">--</span>
          </div>
        </div>
      </div>

      <div class="period-details">
        <div class="detail-mini morning-precipitation-box">
          <i data-lucide="droplets" class="detail-mini-icon"></i>
          <span class="morning-precipitation">-- mm</span>
        </div>
        <div class="detail-mini">
          <i data-lucide="wind" class="detail-mini-icon"></i>
          <span class="morning-wind">-- km/h</span>
        </div>
      </div>

      <div class="clothing-list">
        <!-- Clothing items will be inserted here -->
      </div>
    </div>

    <!-- Afternoon Card -->
    <div class="period-card afternoon-card" data-period="afternoon">
      <div class="period-header">
        <div class="period-title-group">
          <i data-lucide="sun" class="period-icon"></i>
          <span class="period-name">Après-midi</span>
        </div>
        <div class="period-time-group">
          <span class="period-time">12h - 17h</span>
          <span class="period-status afternoon-status"></span>
        </div>
      </div>

      <div class="period-main">
        <div class="period-temp-section">
          <div class="period-temp">
            <span class="period-temp-value">--</span>
            <span class="period-temp-unit">°C</span>
          </div>
          <div class="period-feels-like">
            <span class="feels-like-label">Ressenti</span>
            <span class="afternoon-feels-like">--°C</span>
          </div>
          <div class="period-weather">
            <i data-lucide="cloud" class="period-weather-icon"></i>
            <span class="period-weather-text">--</span>
          </div>
        </div>
      </div>

      <div class="period-details">
        <div class="detail-mini afternoon-precipitation-box">
          <i data-lucide="droplets" class="detail-mini-icon"></i>
          <span class="afternoon-precipitation">-- mm</span>
        </div>
        <div class="detail-mini">
          <i data-lucide="wind" class="detail-mini-icon"></i>
          <span class="afternoon-wind">-- km/h</span>
        </div>
      </div>

      <div class="clothing-list">
        <!-- Clothing items will be inserted here -->
      </div>
    </div>

    <!-- Evening Card -->
    <div class="period-card evening-card" data-period="evening">
      <div class="period-header">
        <div class="period-title-group">
          <i data-lucide="moon" class="period-icon"></i>
          <span class="period-name">Soirée</span>
        </div>
        <div class="period-time-group">
          <span class="period-time">18h - 21h</span>
          <span class="period-status evening-status"></span>
        </div>
      </div>

      <div class="period-main">
        <div class="period-temp-section">
          <div class="period-temp">
            <span class="period-temp-value">--</span>
            <span class="period-temp-unit">°C</span>
          </div>
          <div class="period-feels-like">
            <span class="feels-like-label">Ressenti</span>
            <span class="evening-feels-like">--°C</span>
          </div>
          <div class="period-weather">
            <i data-lucide="cloud" class="period-weather-icon"></i>
            <span class="period-weather-text">--</span>
          </div>
        </div>
      </div>

      <div class="period-details">
        <div class="detail-mini evening-precipitation-box">
          <i data-lucide="droplets" class="detail-mini-icon"></i>
          <span class="evening-precipitation">-- mm</span>
        </div>
        <div class="detail-mini">
          <i data-lucide="wind" class="detail-mini-icon"></i>
          <span class="evening-wind">-- km/h</span>
        </div>
      </div>

      <div class="clothing-list">
        <!-- Clothing items will be inserted here -->
      </div>
    </div>
  </div>
</section>

<style>
  .today-forecast {
    margin-bottom: 64px;
    animation: fadeIn 0.7s ease-out;
  }

  .today-title {
    font-family: "Cinzel", serif;
    font-size: 1.3rem;
    text-align: center;
    margin-bottom: 20px;
    color: #d1d5db;
    text-shadow: 0 0 10px rgba(255, 107, 0, 0.15);
    font-weight: 600;
    letter-spacing: 0.15em;
    text-transform: uppercase;
  }

  .today-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 350px));
    gap: 20px;
    justify-content: center;
  }

  @media (min-width: 1200px) {
    .today-grid {
      grid-template-columns: repeat(3, 350px);
    }
  }

  .period-card {
    position: relative;
    background: rgba(26, 26, 46, 0.5);
    border: 2px solid rgba(255, 255, 255, 0.1);
    border-radius: 20px;
    padding: 24px;
    backdrop-filter: blur(12px);
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    animation: fadeInUp 0.6s ease-out backwards;
    overflow: hidden;
  }

  .period-card::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: radial-gradient(
      circle at top right,
      rgba(255, 107, 0, 0.06),
      transparent 60%
    );
    opacity: 0;
    transition: opacity 0.4s ease;
    pointer-events: none;
  }

  .period-card:hover::before {
    opacity: 1;
  }

  .period-card > * {
    position: relative;
    z-index: 1;
  }

  .morning-card,
  .afternoon-card,
  .evening-card {
    background: linear-gradient(
      135deg,
      rgba(26, 26, 46, 0.7) 0%,
      rgba(36, 36, 56, 0.6) 100%
    );
  }

  .morning-card {
    animation-delay: 0.1s;
  }

  .afternoon-card {
    animation-delay: 0.2s;
  }

  .evening-card {
    animation-delay: 0.3s;
  }

  /* Active period highlighting */
  .period-card.active {
    background: linear-gradient(
      135deg,
      rgba(50, 35, 25, 0.8) 0%,
      rgba(65, 45, 30, 0.7) 100%
    );
    border-color: rgba(255, 107, 0, 0.6);
    box-shadow: 0 0 30px rgba(255, 107, 0, 0.3),
                0 8px 25px rgba(0, 0, 0, 0.4);
    transform: scale(1.02);
  }

  .period-card.active::before {
    opacity: 1;
  }

  .period-card:hover {
    transform: translateY(-4px);
    border-color: rgba(255, 107, 0, 0.35);
    box-shadow: 0 10px 25px rgba(255, 107, 0, 0.12);
  }

  .period-card.active:hover {
    transform: translateY(-4px) scale(1.02);
  }

  /* Header */
  .period-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 18px;
    padding-bottom: 14px;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  }

  .period-title-group {
    display: flex;
    align-items: center;
    gap: 10px;
  }

  .period-icon {
    width: 28px;
    height: 28px;
    stroke: rgba(255, 107, 0, 0.7);
    filter: drop-shadow(0 0 6px rgba(255, 107, 0, 0.2));
    stroke-width: 2;
  }

  .period-name {
    font-size: 1.3rem;
    font-weight: 700;
    color: #e8e8e8;
    text-shadow: 0 0 10px rgba(255, 107, 0, 0.2);
  }

  .period-time-group {
    display: flex;
    flex-direction: column;
    align-items: flex-end;
    gap: 4px;
  }

  .period-time {
    font-size: 0.85rem;
    color: #d1d5db;
    font-weight: 500;
  }

  .period-status {
    font-size: 0.75rem;
    color: #fbbf24;
    font-weight: 600;
    padding: 2px 8px;
    background: rgba(251, 191, 36, 0.15);
    border-radius: 6px;
    border: 1px solid rgba(251, 191, 36, 0.3);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .period-status:empty {
    display: none;
  }

  /* Main section */
  .period-main {
    margin-bottom: 16px;
  }

  .period-temp-section {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 8px;
  }

  .period-temp {
    display: flex;
    align-items: baseline;
    gap: 6px;
  }

  .period-temp-value {
    font-size: 4rem;
    font-weight: 700;
    color: #ff6b00;
    text-shadow: 0 0 20px rgba(255, 107, 0, 0.5);
    line-height: 1;
  }

  .period-temp-unit {
    font-size: 1.8rem;
    color: #c8c8c8;
    margin-left: 2px;
    font-weight: 400;
  }

  .period-feels-like {
    display: flex;
    align-items: baseline;
    gap: 6px;
    font-size: 0.9rem;
    margin-top: -4px;
  }

  .feels-like-label {
    color: #d1d5db;
    font-weight: 400;
  }

  .period-feels-like span:not(.feels-like-label) {
    color: #fbbf24;
    font-weight: 600;
  }

  .period-weather {
    display: flex;
    align-items: center;
    gap: 8px;
    margin-top: 4px;
  }

  .period-weather-icon {
    width: 26px;
    height: 26px;
    stroke: rgba(255, 107, 0, 0.8);
    opacity: 0.9;
    stroke-width: 2;
  }

  .period-weather-text {
    font-size: 1.05rem;
    color: #e5e7eb;
    font-weight: 500;
  }

  /* Details section */
  .period-details {
    display: flex;
    justify-content: center;
    gap: 20px;
    margin-bottom: 16px;
    padding: 10px;
    background: rgba(0, 0, 0, 0.2);
    border-radius: 10px;
  }

  .detail-mini {
    display: flex;
    align-items: center;
    gap: 6px;
    font-size: 0.9rem;
    color: #e5e7eb;
    font-weight: 500;
  }

  .detail-mini.hidden {
    display: none;
  }

  .detail-mini-icon {
    width: 18px;
    height: 18px;
    stroke: rgba(209, 213, 219, 0.7);
    flex-shrink: 0;
    stroke-width: 2;
  }

  /* Clothing list directly on card */
  .clothing-list {
    display: flex;
    flex-direction: column;
    gap: 8px;
    margin-top: 16px;
  }

  /* Dynamic elements created by JavaScript need :global() */
  :global(.clothing-item) {
    font-size: 0.95rem;
    color: #c8c8c8;
    padding: 10px 12px;
    background: rgba(0, 0, 0, 0.15);
    border-radius: 10px;
    border-left: 3px solid rgba(255, 107, 0, 0.15);
    transition: all 0.3s ease;
    animation: slideInRight 0.4s ease-out backwards;
    display: flex;
    align-items: center;
    gap: 12px;
  }

  :global(.period-card.active .clothing-item) {
    color: #e8e8e8;
    background: rgba(255, 107, 0, 0.12);
    border-left-color: rgba(255, 107, 0, 0.5);
    box-shadow: 0 2px 8px rgba(255, 107, 0, 0.1);
  }

  :global(.clothing-item:hover) {
    background: rgba(255, 107, 0, 0.08);
    transform: translateX(3px);
  }

  :global(.period-card.active .clothing-item:hover) {
    background: rgba(255, 107, 0, 0.18);
    border-left-color: rgba(255, 107, 0, 0.7);
    box-shadow: 0 4px 12px rgba(255, 107, 0, 0.2);
  }

  :global(.clothing-icon-img) {
    width: 36px;
    height: 36px;
    object-fit: contain;
    flex-shrink: 0;
    filter: brightness(0) saturate(100%) invert(65%) sepia(10%) saturate(200%) hue-rotate(180deg) brightness(90%) contrast(85%);
    transition: filter 0.3s ease;
  }

  :global(.period-card.active .clothing-icon-img) {
    filter: brightness(0) saturate(100%) invert(50%) sepia(98%) saturate(2476%) hue-rotate(2deg) brightness(103%) contrast(101%);
  }

  :global(.clothing-item:nth-child(1)) {
    animation-delay: 0.1s;
  }

  :global(.clothing-item:nth-child(2)) {
    animation-delay: 0.15s;
  }

  :global(.clothing-item:nth-child(3)) {
    animation-delay: 0.2s;
  }

  :global(.clothing-item:nth-child(4)) {
    animation-delay: 0.25s;
  }

  @keyframes slideInRight {
    from {
      opacity: 0;
      transform: translateX(-15px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  /* Responsive */
  @media (max-width: 768px) {
    .today-title {
      font-size: 1.2rem;
      margin-bottom: 16px;
    }

    .today-grid {
      grid-template-columns: 1fr;
      gap: 18px;
    }

    .period-card {
      padding: 20px;
    }

    .period-temp-value {
      font-size: 3.5rem;
    }

    .period-name {
      font-size: 1.2rem;
    }

    :global(.clothing-icon-img) {
      width: 32px;
      height: 32px;
    }
  }

  @media (max-width: 480px) {
    .period-card {
      padding: 18px;
    }

    .period-temp-value {
      font-size: 3rem;
    }

    .period-temp-unit {
      font-size: 1.5rem;
    }

    .period-icon {
      width: 24px;
      height: 24px;
    }

    .period-weather-icon {
      width: 22px;
      height: 22px;
    }

    .period-details {
      gap: 12px;
      padding: 8px;
    }

    .detail-mini {
      font-size: 0.85rem;
    }

    .detail-mini-icon {
      width: 16px;
      height: 16px;
    }

    :global(.clothing-icon-img) {
      width: 28px;
      height: 28px;
    }

    :global(.clothing-item) {
      font-size: 0.9rem;
      padding: 8px 10px;
    }
  }
</style>
