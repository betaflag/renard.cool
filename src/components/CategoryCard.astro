---
import { slugify } from "../lib/slugify";

interface Props {
  category: string;
  count: number;
  cookbook: string;
  image: string;
}

const { category, count, cookbook, image } = Astro.props;

// French display names for categories
const categoryNames: Record<string, string> = {
  'entrée': 'Entrées',
  'plat principal': 'Plats Principaux',
  'accompagnement': 'Accompagnements',
  'salade': 'Salades',
  'dessert': 'Desserts',
  'collation': 'Collations',
  'boisson': 'Boissons'
};

const displayName = categoryNames[category] || category;

// Generate URL based on whether this is a cookbook or standalone category
const categoryUrl = cookbook === "Cuisine"
  ? `/cuisine/categories/${slugify(category)}`
  : `/cuisine/cookbooks/${slugify(cookbook)}/${slugify(category)}`;
---

<a href={categoryUrl} class="category-card" data-category={category}>
  <div class="category-image">
    <img src={image} alt={displayName} />
  </div>
  <div class="category-info">
    <h3>{displayName}</h3>
    <p class="recipe-count">{count} {count === 1 ? 'recette' : 'recettes'}</p>
  </div>
</a>

<style>
  .category-card {
    display: block;
    background: rgba(255, 255, 255, 0.05);
    border: 2px solid rgba(211, 84, 0, 0.3);
    border-radius: 16px;
    overflow: hidden;
    transition: all 0.3s ease;
    cursor: pointer;
    text-decoration: none;
    color: inherit;
  }

  .category-card:hover {
    transform: translateY(-8px);
    border-color: #d35400;
    box-shadow:
      0 8px 32px rgba(211, 84, 0, 0.3),
      0 0 60px rgba(211, 84, 0, 0.2);
  }

  .category-image {
    width: 100%;
    height: 200px;
    overflow: hidden;
    position: relative;
  }

  .category-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .category-card:hover .category-image img {
    transform: scale(1.05);
  }

  .category-info {
    padding: 1.5rem;
    text-align: center;
  }

  .category-info h3 {
    margin: 0 0 0.5rem 0;
    font-size: 1.5rem;
    color: #d35400;
    font-weight: 600;
  }

  .recipe-count {
    margin: 0;
    font-size: 1rem;
    color: rgba(255, 255, 255, 0.7);
  }

  @media (max-width: 768px) {
    .category-image {
      height: 150px;
    }

    .category-info h3 {
      font-size: 1.25rem;
    }

    .recipe-count {
      font-size: 0.9rem;
    }
  }
</style>
